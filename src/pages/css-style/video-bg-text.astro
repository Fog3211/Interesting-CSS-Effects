---
import FireWorkVideo from '../../assets/videos/firework.mp4';
---

<div class='relative w-full h-[600px]'>
  <video
    class='w-full h-full absolute top-0 left-0 bottom-0 right-0 object-cover'
    autoplay
    muted
    loop
    src={FireWorkVideo}
  ></video>
  <p
    class='w-full h-full absolute top-0 left-0 font-bold text-9xl text-center bg-white mix-blend-screen flex justify-center items-center'
  >
    mix-blend-mode: screen;
  </p>
</div>
