<style>
  html,
  body {
    height: 100%;
  }

  body {
    background-color: #000;
  }
  .rotate-border-wrapper {
    height: 100%;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .rotate-border-content {
    position: relative;
    display: inline-block;
    padding: 20px 40px;
    border-radius: 4px;
    overflow: hidden;
    color: #fff;
  }
  .rotate-border-content::before {
    position: absolute;
    content: '';
    top: 50%;
    left: 50%;
    z-index: -2;
    background: linear-gradient(45deg, #f00, #ff0);
    height: 150%;
    width: 150%;
    transform-origin: 0 0;
    animation: rotate 3.5s linear infinite;
  }
  .rotate-border-content::after {
    position: absolute;
    content: '';
    z-index: -1;
    left: 4px;
    top: 4px;
    background-color: #000;
    width: calc(100% - 8px);
    height: calc(100% - 8px);
    border-radius: 4px;
  }

  @keyframes rotate {
    to {
      transform: rotate(1turn);
    }
  }
</style>

<div class='rotate-border-wrapper'>
  <div class='rotate-border-content'>rotate border</div>
</div>
